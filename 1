#include<stdio.h>
#include<stdlib.h>
void group_dot(int i,int j,int width,int height,int **bright,int **visited){
		       if( i < 0 || j < 0 || i >= height || j >= width )return;
		       if(bright[i][j] == 0 || visited[i][j] == 1)return;

		       visited[i][j]=1;
		       
		       group_dot(i-1,j,width,height,bright,visited); //for looking the up element
		       group_dot(i+1,j,width,height,bright,visited);  //down
		       group_dot(i,j-1,width,height,bright,visited); //left
		       group_dot(i,j+1,width,height,bright,visited);  //right
	
		         
	       }

int main(){
	FILE *fp;
	int width,height,maxvalue;
	char format[3];
	fp=fopen("blackboard_dot_p3.ppm","r+");
	if(!fp){
		printf("file cannot be open");
	}
	fscanf(fp, "%s", format); 
	fscanf(fp, "%d %d", &width, &height); 
	fscanf(fp, "%d", &maxvalue);

        int r,g,b;	
//	int bright_pixel,bright[height][width];
//	int visited[height][width];
//	int image[height][width][3];
         int **bright = malloc(height * sizeof(int *));
         int **visited = malloc(height * sizeof(int *));
         int (*image)[width][3] = malloc(height * sizeof(*image));

         for (int i = 0; i < height; i++) {
         bright[i] = malloc(width * sizeof(int));
         visited[i] = malloc(width * sizeof(int));
	 }
	
	for(int i=0; i < height ; i++){
		for(int j=0;j< width;j++){
			visited[i][j]=0;
			fscanf(fp, "%d %d %d", &r, &g, &b);

                         image[i][j][0] = r;
                        image[i][j][1] = g;
                       image[i][j][2] = b;

//		printf("R = %d ,G = %d , B = %d ",r,g,b);
		if((r+g+b)/3 > 200){
			bright[i][j]=1;
		}
		else{
			bright[i][j]=0;
		}
		}
	}
	fclose(fp);
	int dot_count=0;
	       for(int i=0; i<height ;i++){
		       for(int j=0;j < width;j++){
			       if(bright[i][j] == 1 && visited[i][j] == 0){
				       
				       //found the new dot
				       dot_count+=1;
				       group_dot(i,j,width,height,bright,visited);
			       }
		       }
	       }
	       
	       printf("Total dot are : %d",dot_count);

// marking border in yellow
		  
//		for(int i=0;i<height;i++){
//			for(int j=0;j<width;j++){
//				if(bright[i][j]==1){
//				//check the bright pixel neighbour is 0 or not
//					for(int k=0;k<4;k++){
//						int d1[]={-1,1,0,0}; //for i
//						int d2[]={0,0,-1,1}; //for j
//						int n1,n2;
//						n1=i+d1[k];
//						n2=j+d2[k]; 
//						if (n1 >= 0 && n1 < height && n2 >= 0 && n2 < width) {
//							if(bright[n1][n2] == 0){
//							//set pixel yellow
//								image[i][j][0]=255;
//								image[i][j][1]=0;
//								image[i][j][2]=0;
//								}
//					
//							} 
//						}
//					}
//				}
//			}
		
			
			
			FILE *out = fopen("output.ppm", "w");
    			fprintf(out, "P3\n%d %d\n255\n", width, height);
    			for (int i = 0; i < height; i++) {
        			for (int j = 0; j < width; j++) {
           				 fprintf(out, "%d %d %d\n", image[i][j][0], image[i][j][1], image[i][j][2]);
       				 }	
			    }

    fclose(out);
    for (int i = 0; i < height; i++) {
        free(bright[i]);
        free(visited[i]);
    }
    free(bright);
    free(visited);
    free(image);


    return 0;
}
	
